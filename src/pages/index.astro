  <script>
    const sr = ScrollReveal({
      distance: "65px",
      duration: 2600,
      reset: false,
    });
    sr.reveal(".nombre-container", { delay: 1000, origin: "top" });
    sr.reveal(".cardProject", { delay: 200, origin: "bottom" });
    sr.reveal(".cardProject2", { delay: 200, origin: "bottom" });
    sr.reveal(".skillsContainer", { delay: 0, origin: "left" });
    sr.reveal(".linksContainers", { delay: 0, origin: "bottom" });
    sr.reveal(".contact-container", { delay: 0, origin: "left" });
  </script>
</Layout>

