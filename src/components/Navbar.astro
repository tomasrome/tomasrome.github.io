---

<script>
  const sr = ScrollReveal({
    distance: "65px",
    duration: 2600,
    delay: 450,
    reset: false,
  });
  sr.reveal(".nombre-container", { delay: 200, origin: "top" });
  sr.reveal(".cardProject", { delay: 0, origin: "left" });
  sr.reveal(".cardProject2", { delay: 0, origin: "rigth" });
  sr.reveal(".skillsContainer", { delay: 0, origin: "left" });
  sr.reveal(".contact-container", { delay: 200, origin: "left" });
  sr.reveal(".linksContainers", { delay: 200, origin: "bottom" });
  sr.reveal(".cardSection2", { delay: 200, origin: "bottom" });
</script>

<section class="navbar">
  <div class="logoDiv">
    <img src="/tr-logo.png" class="logo" alt="" />
    <span class="effect">TOMÁS <strong>ROMERO</strong></span>
  </div>
  <ul class="menu">
    <li>
      <a href="#home">Home</a>
    </li>
    <li>
      <a href="#pro">Proyectos</a>
    </li>
    <li>
      <a href="#tech">Tecnologias</a>
    </li>
    <li>
      <a href="#cont">Contacto</a>
    </li>
  </ul>
  <ul class="linksContainer">
    <li>
      <a href={CV} target="_blank" rel="noopener noreferrer">
        <button class="btnCv">
          <span>Descargar</span>CV
          <svg
            class="svgDownload"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            aria-label="download"
          >
            <path
              fill="currentColor"
              d="m12 16l-5-5l1.4-1.45l2.6 2.6V4h2v8.15l2.6-2.6L17 11zm-6 4q-.825 0-1.412-.587T4 18v-3h2v3h12v-3h2v3q0 .825-.587 1.413T18 20z"
            ></path>
          </svg>
        </button>
      </a>
    </li>
  </ul>
  <div class="underline"></div>
</section>

<script>
  function updateUnderline() {
    const navLinks = document.querySelectorAll(".menu a");
    const underline = document.querySelector(".underline");

    navLinks.forEach((link) => {
      const sectionId = link.getAttribute("href").substring(1);
      const section = document.getElementById(sectionId);

      if (sectionId === "home") {
        if (window.scrollY === 0) {
          underline.style.left = `${link.offsetLeft}px`;
          underline.style.width = `${link.offsetWidth}px`;
        }
      } else if (isElementInViewport(section)) {
        // Verifica si la sección está en la ventana gráfica
        underline.style.left = `${link.offsetLeft}px`;
        underline.style.width = `${link.offsetWidth}px`;
      }
    });
  }

  function isElementInViewport(el) {
    const rect = el.getBoundingClientRect();
    return (
      rect.top >= 0 &&
      rect.left >= 0 &&
      rect.bottom <=
        (window.innerHeight || document.documentElement.clientHeight) &&
      rect.right <= (window.innerWidth || document.documentElement.clientWidth)
    );
  }

  window.addEventListener("scroll", updateUnderline);

  function handleMenuClick(e) {
    e.preventDefault();

    const targetId = this.getAttribute("href").substring(1);
    const targetSection = document.getElementById(targetId);

    if (targetSection) {
      const offsetTop = targetSection.offsetTop;
      window.removeEventListener("scroll", updateUnderline);
      window.scrollTo({
        top: offsetTop,
        behavior: "smooth",
      });
      setTimeout(() => {
        window.addEventListener("scroll", updateUnderline);
      }, 3000);
    }
  }

  document.querySelectorAll(".menu a").forEach((anchor) => {
    anchor.addEventListener("click", handleMenuClick);
  });

  window.addEventListener("load", updateUnderline);

  document.querySelectorAll(".menu a").forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      e.preventDefault();

      const targetId = this.getAttribute("href").substring(1);
      const targetSection = document.getElementById(targetId);

      if (targetSection) {
        const offsetTop = targetSection.offsetTop;
        window.scrollTo({
          top: offsetTop,
          behavior: "smooth",
        });
        document.querySelector(".underline").style.left =
          `${this.offsetLeft}px`;
        document.querySelector(".underline").style.width =
          `${this.offsetWidth}px`;
      }
    });
  });
</script>

<style>
  .underline {
    position: absolute;
    bottom: 10px;
    height: 2px;
    background-color: #3d6cb2; /* Color de la barra subrayada */
    transition: all 0.3s ease; /* Animación de transición */
  }

  @font-face {
    font-family: "Rolling";
    src: url("../../assets/fonts/beyond_the_mountains/beyond.ttf");
    font-size: 20px;
  }

  .navbar {
    background-color: #0f172a82;
    backdrop-filter: blur(10px);
    height: 3em;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 20px;
    padding: 0 5%;
    position: sticky;
    top: 0;
    right: 0;
    z-index: 100;
  }

  .logo {
    height: 45px;
    cursor: pointer;
  }

  .logoDiv {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .effect {
    color: white;
    font-family: "Archivo";
    font-style: italic;
    font-weight: 700;
    font-size: 30px;
    margin-left: 5px;
    animation:
      logo,
      auto linear;
    animation-timeline: scroll(root block);
  }

  .effect strong {
    color: #2169a6;
    font-family: "Archivo";
    font-style: italic;
    font-weight: 700;
    font-size: 30px;
  }

  @keyframes logo {
    0% {
      opacity: 0;
    }
    30% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
  }

  .menu {
    display: flex;
    gap: 50px;
  }

  .menu li {
    cursor: pointer;
  }

  .menu a {
    color: rgba(255, 255, 255, 0.87);
  }

  #botones {
    opacity: 0;
    animation:
      progress-grow,
      auto ease;
    animation-timeline: scroll(root block);
  }

  @keyframes progress-grow {
    0% {
      opacity: 0;
    }
    30% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 1;
    }
  }

  .btnCv {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2px;
    font-family: archivo;
    font-size: 16px;
    font-weight: 400;
    cursor: pointer;
    padding: 3px 20px;
    background-color: rgb(61, 108, 178);
    border-radius: 5px;
    border: none;
    transition: ease 0.2s;
  }

  .btnCv:hover {
    /*color: #242424;;
    background:rgba(255, 255, 255, 0.87);*/
    background-color: #14233a;
    filter: drop-shadow(0 0 5px rgba(89, 155, 255, 0.531));
  }

  .btnCv .svgDownload {
    transition: ease 0.2s;
  }

  .btnCv:hover .svgDownload {
    animation: bouncing 1s;
  }

  @keyframes bouncing {
    0%,
    50% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-4px);
    }
    60% {
      transform: translateY(-4px);
    }
  }

  .btnCv span {
    margin-right: 5px;
  }

  .linksContainer {
    width: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .links {
    width: 30px;
    cursor: pointer;
    fill: white;
    transition: ease 0.2s;
  }

  .links:hover {
    /*fill: #007fbc;
    scale: 1.1;*/
    fill: rgb(61, 108, 178);
  }

  li {
    list-style: none;
    display: flex;
  }

  a {
    display: flex;
    align-items: center;
  }

  @media (max-width: 1160px) {
    .linksContainer {
      margin-right: 0;
      transition: 0.2s;
      justify-content: end;
    }

    .menu {
      gap: 10px;
      transition: 0.2s;
      display: none;
    }
  }

  @media (max-width: 700px) {
    .effect {
      font-size: 18px;
    }

    .effect strong {
      font-size: 18px;
    }

    .btnCv {
      gap: 2px;
      font-size: 12px;
      font-weight: 400;
      margin-right: 20px;
    }

    .btnCv span {
      display: none;
    }
  }
</style>
