<style>
  .home {
    width: 100%;
    position: relative;
    height: 100svh;
    background-image: url("def.webp");
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
  }

  .nombre-container {
    position: absolute;
    top: 20%;
    left: 15%;
  }

  .tr {
    text-transform: uppercase;
    font-size: 4em;
    line-height: 1.1;
    font-family: "Archivo", sans-serif;
    font-optical-sizing: auto;
    font-weight: 800;
    font-style: italic;
    font-variation-settings: "wdth" 100;
    color: white;
  }

  .tr strong {
    color: #3d6cb2;
    font-family: "Archivo", sans-serif;
    font-weight: 700;
  }

  h2 {
    text-transform: uppercase;
    font-weight: 700;
  }

  .parrafo {
    max-width: 1000px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    line-height: 30px;
    text-wrap: balance;
  }

  @media (max-width: 1300px) {
    .home {
      background-size: cover;
      background-attachment: fixed;
    }
  }

  @media (max-width: 600px) {
    .home {
      background-image: url("def-mobile.webp");
      background-size: cover;
    }

    .nombre-container {
      position: absolute;
      top: 20%;
    }
  }

  @media (max-width: 470px) {
    .home {
      display: flex;
      justify-content: start;
      align-items: center;
    }
  }

  @media (max-width: 430px) {
    .home {
      display: flex;
      justify-content: start;
      align-items: start;
      width: 100%;
    }

    .nombre-container {
      position: relative;
    }

    .tr {
      font-size: 4em;
    }

    h2 {
      font-size: 1.5em;
    }
  }

  @media (max-width: 380px) {
    .nombre-container {
      left: 9%;
    }
  }
</style>
