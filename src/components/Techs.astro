<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  .sectionTech {
    width: 100%;
    height: 733px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 25px;
  }

  header {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  header p {
    font-size: 18px;
    padding: 25px;
  }

  .header-container {
    position: relative;
  }

  .titulo {
    font-size: 80px;
    color: rgba(255, 255, 255, 0.04);
    user-select: none;
  }

  .titulo2 {
    font-size: 40px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .tech {
    padding: 10px 0;
  }

  .skillsContainer {
    height: 500px;
    width: 60%;
    background-color: #0f172a;
    border: 5px solid #2c3853;
    filter: drop-shadow(0 0 1em rgba(61, 108, 178, 0.3));
    border-radius: 30px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .skillsContainer header {
    height: 10 0px;
    font-size: 20px;
  }

  .skillsList {
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-columns: repeat(5, minmax(0, 1fr));
    grid-template-rows: repeat(2, minmax(0, 1fr));
  }

  .skillsList div {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .skillsList img {
    width: 60px;
  }

  .html {
    transition: ease 0.2s;
  }

  .html:hover {
    filter: drop-shadow(0 0 2em #e44d26);
    scale: 1.1;
  }

  .css {
    transition: ease 0.2s;
  }

  .css:hover {
    filter: drop-shadow(0 0 2em #1572b6);
    scale: 1.1;
    transition: ease 0.2s;
  }

  .js {
    transition: ease 0.2s;
  }

  .js:hover {
    filter: drop-shadow(0 0 1.5em #f0db4f);
    scale: 1.1;
    transition: ease 0.2s;
  }

  .react {
    transition: ease 0.2s;
  }

  .react:hover {
    filter: drop-shadow(0 0 2em #61dafb);
    scale: 1.1;
    transition: ease 0.2s;
